<%init>
my $ds = $zs->present->dbx('Domainset')->find($sid);
my $glue;

if ($ds) {
    $glue = $ds->glue->search({domain_id => $did})->first;
}

if ($glue) {
    $glue->delete;
    $m->redirect("/domainset/$sid")
} else {
    $m->clear_buffers;
    $m->abort(404);
}

</%init>

<%args>
$did
$sid
</%args>