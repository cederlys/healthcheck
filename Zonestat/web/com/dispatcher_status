% if (!defined($res)) {
<span class="problem">Can't read pid file.</span>
% } elsif ($res == 0) {
<span class="problem">Not OK</span>
% } else {
<span class="fine">OK</span>
% }

<%init>
my $res = 'Unknown';
my $pidfile = $dc->config->get("daemon")->{pidfile};
if(open my $fh, '<', $pidfile) {
    my $pid = <$fh>;
    chomp($pid);
    $res = kill 0, $pid;
} else {
    $res = undef;
}
</%init>
